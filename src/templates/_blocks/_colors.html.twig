<section class="lib-mt_6x-large">
  <div class="lib-mb_2x-large">
    {% for spectrum in colorPalette %}
      <div id="{{ spectrum.id }}" class="colors--display lib-mb_5x-large">
        <h3 class="lib-mb_x-large">
          {{ spectrum.status }}
        </h3>
        {% for shade in spectrum.color %}
          <h4>
            {{ shade.name }}
          </h4>
          <div class="colors--wrap lib-mb_large">
            {% for key, value in shade.hue %}
              <div class="color--info lib-m_x-small">
                <div class="lib-bg_{{ value }}"></div>
                {{ key }}
              </div>
            {% endfor %}
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</section>
