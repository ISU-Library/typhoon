<div class="news-card--wrap">
  {% for card in newsCardLead %}
    <div class=" {{ card.cardClass }} lib-br4 lib-mb-lg">
      <a href="#"
        class="lib-news-card--link"
        style="background-image: url('/src/img/news-card.jpg');">
        <span class="lib-aria-text">{{ card.ariaText }}</span>
        <div class="lib-news-card--text lib-pr-xl lib-pl-lg lib-pt-2xl lib-pb-lg lib-text-white">
          <span class="lib-news-card--category lib-text-white">
            {{ card.category }}
          </span>
          <h3 class="lib-news-card--title lib-mb-md lib-fs-lg lib-text-white">
            {{ card.title }}
          </h3>
          <div class="lib-news-card--desc">
            <p class="lib-text-white">
              {{ card.desc }}
            </p>
            <div class="lib-cta--wrap">
              <p class="lib-cta lib-text-white">
                {{ card.linkText }}
              </p>
            </div>
          </div>
        </div>
        <div class="image-overlay"></div>
      </a>
    </div>
  {% endfor %}
</div>
