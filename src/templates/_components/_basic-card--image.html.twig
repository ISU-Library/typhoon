{% set basicCardsImage = [
  {
    cardClass: 'lib-basic-card--image',
    img: '/src/img/basic-card--image.jpg',
    title: 'Card Title',
    category: 'Category',
    desc: 'Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.',
    linkText: 'Link words',
    pageLink: '#',
    ariaText: 'Readable by screen readers'
  },
  {
    cardClass: 'lib-basic-card--yellow lib-basic-card--image',
    img: '/src/img/basic-card--image.jpg',
    title: 'Card Title',
    category: 'Category',
    desc: 'Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.Ut enim ad minim veniam.',
    linkText: 'Link words',
    pageLink: '#',
    ariaText: 'Readable by screen readers'
  },
  {
    cardClass: 'lib-basic-card--blue lib-basic-card--image',
    img: '/src/img/basic-card--image.jpg',
    title: 'Card Title',
    category: 'Category',
    desc: 'Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.Ut enim ad minim veniam.',
    linkText: 'Link words',
    pageLink: '#',
    ariaText: 'Readable by screen readers'
  }
] %}

<div class="lib-basic-card--wrap">
  {% for card in basicCardsImage %}
    <div class="lib-basic-card {{ card.cardClass }} lib-mr-2xl lib-mb-2xl sm:lib-mr-0 xs:lib-mr-0"">
      <a href="{{ card.pageLink }}/index.html" class="lib-basic-card--link">
        <div class="lib-basic-card--image-wrap">
          <figure>
            <img src="{{ card.img }}" alt="alt" />
            <div class="image-overlay"></div>
          </figure>
          <div class="lib-basic-card--text-wrap">
            <span class="lib-basic-card--category lib-mb-xs">
              {{ card.category }}
            </span>
            <h3 class="lib-basic-card--title">
              {{ card.title }}
            </h3>
          </div>
        </div>
        <span class="lib-aria-text">{{ card.ariaText }}</span>
        <div class="lib-basic-card--text-wrap">
          <p class="lib-basic-card--desc">
            {{ card.desc }}
          </p>
          <div class="lib-basic-card--cta--wrap">
            <p class="lib-basic-card--cta">
              {{ card.linkText }}
            </p>
          </div>
        </div>
      </a>
    </div>
  {% endfor %}
</div>
